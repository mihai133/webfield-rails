<div class="mx-auto md:w-2/3 w-full flex">
<div class="mx-auto">
<% if notice.present? %>
<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<%= render_button("< Back to project",
          variant: :link,
          as: :link,
          href: project_path(@project),
          class: "hover:underline hover:text-green-500"
          ) %>


    <%= render @task %>

    <%= link_to "Edit this task", edit_project_task_path(@project, @task), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
        <%= render_button("Delete project",
          variant: :destructive,
          as: :button,
          href: project_task_path(@project, @task),
          method: :delete,
          data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want delete this project?" }) %>
    </div>
  </div>
</div>
